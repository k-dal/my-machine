#### -(( Black-Pylint Config ))- https://black.readthedocs.io/en/stable/compatible_configs.html?highlight=pylint

[MESSAGES CONTROL]
# C0114: Missing module docstring (missing-module-docstring)
# C0116: Missing function or method docstring (missing-function-docstring)
# C0326: C0326: Bad whitespace
# C0330: C0330: Wrong hanging indentation before block (add 4 spaces)
# E0401: Unable to import (import-error)
disable = C0114, C0116, C0326, C0330, E0401

[FORMAT]
max-line-length = 99

[BASIC]
# Good variable names which should always be accepted, separated by a comma.
good-names=e,
           i,
           j,
           k,
           db,
           el,
           ex,
           ix,
           Run,
           _

# List of comma separated words that should not be checked.
spelling-ignore-words=ruchomi,
                      eavedata,
                      dalias

[MISCELLANEOUS]
# List of note tags to take in consideration, separated by a comma.
notes=BUG,
      FIXME,
      NEXT,
      TODO
